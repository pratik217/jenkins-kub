pipeline {
    agent {
        kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: maven
            image: docker
            command:
            - cat
            tty: true
        '''
    }
      }
    stages {
        stage('Build') { 
            steps {
               sh 'docker -v'
               sh 'systemctl enable docker.service' 
               sh 'docker build -t java2 dockerfile'  
            }
        }
        stage('Tag and Upload ') { 
            steps {
                sh 'docker tag java2 kpratik217/jenkins-kub:1'

            }
        }
        stage('Deploy') { 
            steps {
                sh 'docker push kpratik217/jenkins-kub:1'
            }
        }
    }
}
