pipeline {
    agent {
        kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: dockerpod
            image: docker
            command:
            - cat
            tty: true
        '''
    }
      }
    stages {
        stage('Build') { 
            steps {
                container('dockerpod') {
                   sh 'docker -v'
                   sh 'apt-get update'
                   sh 'apt-get install --reinstall systemd'
                   sh 'service docker start'
                   sh 'docker build -t java2 -f limits-service/dockerfiles/dockerfile .'  
            }
            }
        }
        stage('Tag and Upload ') { 
            steps {
                sh 'docker tag java2 kpratik217/jenkins-kub:1'

            }
        }
        stage('Deploy') { 
            steps {
                sh 'docker push kpratik217/jenkins-kub:1'
            }
        }
    }
}
